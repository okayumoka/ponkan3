{
  "name": "ponkan",
  "version": "1.0.0",
  "description": "Ponkan is novel-game-engine for web.",
  "main": "dist/ponkan.js",
  "types": "dist/ponkan.d.ts",
  "repository": {
    "type": "git",
    "url": "https://github.com/studiomikan/ponkan"
  },
  "private": true,
  "author": {
    "name": "Studio Mikan",
    "email": "studiomikan@gmail.com",
    "url": "https://studiomikan.net/"
  },
  "license": "MIT",
  "homepage": "https://github.com/studiomikan/ponkan",
  "bugs": {
    "url": "https://github.com/studiomikan/ponkan/issues",
    "email": "studiomikan@gmail.com"
  },
  "scripts": {
    "clean": "rimraf dist dist_dev dist_test",
    "check-update": "ncu",
    "do-update": "ncu -u & npm install",
    "build": "rimraf dist & webpack --config webpack.config.prod.js",
    "start": "rimraf dist_dev & webpack-dev-server --config webpack.config.dev.js",
    "dev": "npm run start",
    "doc": "rimraf doc & typedoc --out ./doc ./src/ts",
    "lint": "eslint -c .eslintrc.json \"**/*.ts\"",
    "lint-fix": "eslint -c .eslintrc.json --fix \"**/*.ts\"",
    "prettier": "prettier --write **/*.ts",
    "build-test": "rimraf dist_test & webpack --config webpack.config.test.js",
    "start-test": "rimraf dist_test & webpack-dev-server --config webpack.config.test.js",
    "do-test": "mocha-headless-chrome -f dist_test/test.html",
    "do-test-host": "mocha-headless-chrome -f http://localhost:8080/dist_test/test.html",
    "watch-test": "watch 'npm run do-test-host' ./dist_test",
    "analyze": "source-map-explorer 'dist/ponkan.js'",
    "test": "run-s build-test do-test"
  },
  "dependencies": {
    "@pixi/app": "^5.2.3",
    "@pixi/core": "^5.2.3",
    "@pixi/display": "^5.2.3",
    "@pixi/loaders": "^5.2.3",
    "@pixi/sprite": "^5.2.3",
    "@pixi/ticker": "^5.2.3",
    "pixi.js": "^5.2.3",
    "@pixi/filter-adjustment": "^3.1.1",
    "pixi-filters": "^3.1.1",
    "@types/howler": "^2.1.2",
    "howler": "^2.1.3",
    "rimraf": "^3.0.2",
    "source-map-explorer": "^2.4.2"
  },
  "devDependencies": {
    "@types/chai": "^4.2.11",
    "@types/mocha": "^7.0.2",
    "@types/node": "^13.13.4",
    "@typescript-eslint/eslint-plugin": "^2.30.0",
    "@typescript-eslint/parser": "^2.30.0",
    "chai": "^4.2.0",
    "copy-webpack-plugin": "^5.1.1",
    "dts-bundle-webpack": "^1.0.2",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-loader": "^4.0.2",
    "eslint-plugin-prettier": "^3.1.3",
    "mocha": "^7.1.2",
    "mocha-headless-chrome": "^2.0.3",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.0.5",
    "terser-webpack-plugin": "^2.3.6",
    "ts-loader": "^7.0.1",
    "typedoc": "^0.17.6",
    "typescript": "^3.8.3",
    "watch": "^1.0.2",
    "webfontloader": "^1.6.28",
    "webpack": "^4.43.0",
    "webpack-cli": "^3.3.11",
    "webpack-dev-server": "^3.10.3",
    "webpack-merge": "^4.2.2",
    "write-file-webpack-plugin": "^4.5.1"
  }
}
